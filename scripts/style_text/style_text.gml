/// @description (objoption, color, size);
// esta funcion precisa de tres argumentos y se encarga de administrar
// que tipo de estilo tiene que interpretar segun el evento que se
// accione con el mouse

with(obj_menuoptions) {
	if (argument0==0) {
		Color0 = argument1;
		Size0  = argument2;
	}
	if (argument0==1) {
		Color1 = argument1;
		Size1  = argument2;
	}
	if (argument0==2) {
		Color2 = argument1;
		Size2  = argument2;
	}
	if (argument0==3) {
		Color3 = argument1;
		Size3  = argument2;
	}
	if (argument0==4) {
		Color4 = argument1;
		Size4  = argument2;
	}
}